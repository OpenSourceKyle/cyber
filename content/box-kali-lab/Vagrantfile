Vagrant.configure("2") do |config|
  config.vm.box = "kalilinux/rolling"
  #config.vm.box = "kali-box"
  config.vm.box_check_update = false
  config.vm.hostname = "kali-lab"
  config.vm.provider :libvirt do |v|
    # Automatic resource allocation based on host RAM
    host_mem_kb = `grep MemTotal /proc/meminfo | awk '{print $2}'`.to_i
    if host_mem_kb > 12582912
      v.memory = 8192
      v.cpus = 4
    else
      v.memory = 4096
      v.cpus = 2
    end
    v.management_network_device = "virbr0"
    #v.memorybacking :access, mode: 'shared'  # disabled due to crashes
    v.video_type = "qxl"
    v.video_vram = 32768
    v.graphics_type = "spice"
    v.channel :type => 'spicevmc', :target_type => 'virtio', :target_name => 'com.redhat.spice.0'
  end
  # Provision guest with Ansible from host
  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "kalilinux.yml"
    ansible.limit = "all"
  end
end

